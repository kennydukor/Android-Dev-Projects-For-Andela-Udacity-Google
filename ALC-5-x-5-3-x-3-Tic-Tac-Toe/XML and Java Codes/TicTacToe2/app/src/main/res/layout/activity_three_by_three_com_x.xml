<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.kennydukor.tictactoe.ThreeByThreeComX"    android:background="@drawable/pic1"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/text_view_3x3_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:background="@drawable/buttons1"
            android:padding="5dp"
            android:text=" You:   0 "
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_3x3_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_3x3_you"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttons1"
            android:padding="5dp"
            android:text=" Com:  0 "
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <Button
            android:id="@+id/button_3x3_resetCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/buttons1"
            android:text="RESET" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button3c_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button3c_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button3c_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button3c_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button3c_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button3c_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button3c_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button3c_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button3c_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons3"
            android:textSize="60sp" />

    </LinearLayout>

    <Button
        android:id="@+id/quit_button_3Com"
        style="?metaButtonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons2"
        android:text="quit" />

</LinearLayout>